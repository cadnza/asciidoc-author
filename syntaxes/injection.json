{
	"scopeName": "asciidoc.author.quotes",
	"injectionSelector": "L:text.asciidoc",
	"patterns": [
		{
			"include": "#multiline-typographic-quotes-double"
		},
		{
			"include": "#multiline-typographic-quotes-single"
		},
		{
			"include": "#multiline-typographic-quotes-attribute-assigned"
		},
		{
			"include": "#punctuation"
		},
		{
			"include": "#capitals"
		}
	],
	"repository": {
		"multiline-typographic-quotes-double": {
			"begin": "\"`",
			"end": "`\"",
			"name": "markup.italic.quote.typographic-quotes.multiline.asciidoc"
		},
		"multiline-typographic-quotes-single": {
			"begin": "'`",
			"end": "`'",
			"name": "markup.italic.quote.typographic-quotes.multiline.asciidoc"
		},
		"multiline-typographic-quotes-attribute-assigned": {
			"begin": "\\{l\\}",
			"end": "\\{r\\}",
			"name": "markup.italic.quote.typographic-quotes.attribute-assigned-multiline.asciidoc"
		},
		"punctuation": {
			"match": "[\\.,:;!?]",
			"name": "text.asciidoc.author.punctuation"
		},
		"capitals": {
			"match": "[A-Z]",
			"name": "text.asciidoc.author.capitals"
		}
	}
}
